<Window x:Class="PreLockOverlay.OverlayWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True" 
        ShowInTaskbar="False" 
        WindowStartupLocation="Manual" 
        Background="#CC000000" 
        AllowsTransparency="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OverlayWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="This computer will lock in:" 
                       Foreground="White" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="CountdownText" 
                       Text="10" FontSize="72" FontWeight="Bold" Foreground="Yellow" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Press any key or move the mouse to stay active." 
                       Foreground="White" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
